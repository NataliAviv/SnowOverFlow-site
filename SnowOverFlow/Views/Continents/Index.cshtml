@model IEnumerable<SnowOverFlow.Models.Continent>
@using SnowOverFlow.Utility

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<p>
    @using (Html.BeginForm("Index", "Countries", FormMethod.Get))
    {
        <b>Search by:</b>@Html.RadioButton("searchBy", "Name")<text>Name</text>
        @Html.RadioButton("searchBy", "Language")<text>Language</text><br />
        @Html.TextBox("search")<input type="submit" value="Search" />
    }
</p>
@if (User.IsInRole(SD.AdminEndUser))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                    @if (User.IsInRole(SD.AdminEndUser))
                    {
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
